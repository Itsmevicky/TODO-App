<%- include("header")  %>
<div class="box" id="heading">
    <h1>Today</h1>
</div>

<div class="box">
    <% items.forEach((item)=>{ %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
            <p><%= item.name %></p>
        </div>
    </form>
    <% }) %>

    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" id="" autocomplete="off" autofocus>
        <button type="submit">+</button>

    </form>
</div>

<%- include("footer")  %>